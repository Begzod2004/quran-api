{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "وٱلسمآء وٱلطارق (والطارق: النجم الذي يطلع ليلا)"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "ومآ أدۡرىٰك ما ٱلطارق"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ٱلنجۡم ٱلثاقب (الثاقب: المضيء المتوهج)"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "إن كل نفۡسٖ لما عليۡها حافظٞ (إن كل نفس لما: ما كل نفس إلا, حافظ: ملك يحفظ أعمالها)"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "فلۡينظر ٱلۡإنسٰن مم خلق"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "خلق من مآءٖ دافقٖ (دافق: منصب بسرعة في الرحم)"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "يخۡرج منۢ بيۡن ٱلصلۡب وٱلترآئب (الصلب: الظهر, والترائب: عظام الصدر)"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "إنه علىٰ رجۡعه لقادرٞ (رجعه: رده حيا بعد الموت)"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "يوۡم تبۡلى ٱلسرآئر (تبلى السرائر: تختبر، وتكشف ضمائر القلوب)"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "فما له من قوةٖ ولا ناصرٖ"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "وٱلسمآء ذات ٱلرجۡع (ذات الرجع: صاحبة المطر المتكرر)"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "وٱلۡأرۡض ذات ٱلصدۡع (ذات الصدع: ذات التشقق بالنبات)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "إنه لقوۡلٞ فصۡلٞ (فصل: فاصل بين الحق، والباطل)"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "وما هو بٱلۡهزۡل"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "إنهمۡ يكيدون كيۡدا"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "وأكيد كيۡدا"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "فمهل ٱلۡكٰفرين أمۡهلۡهمۡ رويۡدۢا (رويدا: قليلا)"
        }
    ]
}