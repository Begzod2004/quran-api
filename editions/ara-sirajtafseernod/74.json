{
    "chapter": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "يـٰٓأيها ٱلۡمدثر (المدثر: أصله: المتدثر، وهو المتغطي بثيابه)"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "قمۡ فأنذرۡ"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "وربك فكبرۡ (وربك فكبر: اخصص ربك بالتكبير والتعظيم)"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "وثيابك فطهرۡ (وثيابك فطهر: طهر نفسك من المعاصي والآثام)"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "وٱلرجۡز فٱهۡجرۡ (والرجز: الأصنام، وأعمال الشرك)"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "ولا تمۡنن تسۡتكۡثر (ولا تمنن تستكثر: لا تعط العطية، كي تلتمس أكثر منها)"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "ولربك فٱصۡبرۡ"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "فإذا نقر في ٱلناقور (نقر في الناقور: نفخ في الصور نفخة البعث)"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "فذٰلك يوۡمئذٖ يوۡم عسير"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "على ٱلۡكٰفرين غيۡر يسيرٖ"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "ذرۡني ومنۡ خلقۡت وحيدا (وحيدا: فريدا لا مال له، ولا ولد، والمراد به: (الوليد بن المغيرة)"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "وجعلۡت له مالا ممۡدودا (ممدودا: مبسوطا واسعا)"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "وبنين شهودا (شهودا: حضورا معه في مكة لا يغيبون عنه)"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "ومهدت له تمۡهيدا (ومهدت له تمهيدا: يسرت له سبل العيش تيسيرا)"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "ثم يطۡمع أنۡ أزيد"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "كلآۖ إنه كان لأٓيٰتنا عنيدا"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "سأرۡهقه صعودا (سأرهقه صعودا: سأكلفه عذابا شاقا لا راحة له فيه)"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "إنه فكر وقدر (وقدر: هيأ ما يقوله في الطعن في القرآن، ومن جاء به)"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "فقتل كيۡف قدر (فقتل: غلب وقهر)"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "ثم قتل كيۡف قدر"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "ثم نظر (نظر: تأمل فيما هيأ من الطعن)"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "ثم عبس وبسر (عبس: قطب وجهه, وبسر: اشتد في العبوس لما ضاقت عليه الحيل في الطعن)"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "ثم أدۡبر وٱسۡتكۡبر (أدبر: رجع معرضا عن الحق)"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "فقال إنۡ هٰذآ إلا سحۡرٞ يؤۡثر (يؤثر: ينقل عن الأولين)"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "إنۡ هٰذآ إلا قوۡل ٱلۡبشر"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "سأصۡليه سقر (سأصليه سقر: سأدخله جهنم؛ كي يصلى حرها)"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "ومآ أدۡرىٰك ما سقر"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "لا تبۡقي ولا تذر (لا تبقي: لا تترك لحما, ولا تذر: لا تترك عظما)"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "لواحةٞ للۡبشر (لواحة للبشر: محرقة للجلود، مغيرة للبشرة)"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "عليۡها تسۡعة عشر"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "وما جعلۡنآ أصۡحٰب ٱلنار إلا ملـٰٓئكةۖ وما جعلۡنا عدتهمۡ إلا فتۡنة للذين كفروا ليسۡتيۡقن ٱلذين أوتوا ٱلۡكتٰب ويزۡداد ٱلذين ءامنوٓا إيمٰنا ولا يرۡتاب ٱلذين أوتوا ٱلۡكتٰب وٱلۡمؤۡمنون وليقول ٱلذين في قلوبهم مرضٞ وٱلۡكٰفرون ماذآ أراد ٱلله بهٰذا مثلاۚ كذٰلك يضل ٱلله من يشآء ويهۡدي من يشآءۚ وما يعۡلم جنود ربك إلا هوۚ وما هي إلا ذكۡرىٰ للۡبشر (فتنة: اختبارا للكفار, ولا يرتاب: لا يشك, مرض: نفاق, جنود ربك: ملائكته)"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "كلا وٱلۡقمر"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "وٱليۡل إذۡ أدۡبر"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "وٱلصبۡح إذآ أسۡفر"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "إنها لإحۡدى ٱلۡكبر (إنها لإحدى الكبر: إن النار لإحدى العظائم)"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "نذيرا للۡبشر"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "لمن شآء منكمۡ أن يتقدم أوۡ يتأخر"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "كل نفۡسۭ بما كسبتۡ رهينة (رهينة: محبوسة بعملها)"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "إلآ أصۡحٰب ٱلۡيمين"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "في جنـٰتٖ يتسآءلون"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "عن ٱلۡمجۡرمين"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "ما سلككمۡ في سقر (ما سلككم: ما أدخلكم)"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "قالوا لمۡ نك من ٱلۡمصلين"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "ولمۡ نك نطۡعم ٱلۡمسۡكين"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "وكنا نخوض مع ٱلۡخآئضين (نخوض: نتحدث بالباطل)"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "وكنا نكذب بيوۡم ٱلدين"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "حتىٰٓ أتىٰنا ٱلۡيقين (اليقين: الموت)"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "فما تنفعهمۡ شفٰعة ٱلشـٰفعين"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "فما لهمۡ عن ٱلتذۡكرة معۡرضين"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "كأنهمۡ حمرٞ مسۡتنفرةٞ (حمر: حمر وحشية شديدة النفار)"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "فرتۡ من قسۡورةۭ (قسورة: أسد كاسر)"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "بلۡ يريد كل ٱمۡريٕٖ منۡهمۡ أن يؤۡتىٰ صحفا منشرة"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "كلاۖ بل لا يخافون ٱلۡأٓخرة"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "كلآ إنه تذۡكرةٞ"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "فمن شآء ذكره"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "وما يذۡكرون إلآ أن يشآء ٱللهۚ هو أهۡل ٱلتقۡوىٰ وأهۡل ٱلۡمغۡفرة (أهل التقوى: أهل لأن يتقى، ويطاع)"
        }
    ]
}