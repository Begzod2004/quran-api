{
    "chapter": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "وٱلصـٰٓفـٰت صفا (والصافات: قسم بالملائكة حين تصف في عبادتها)"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "فٱلزـٰجرٰت زجۡرا (فالزاجرات: قسم بالملائكة حين تزجر السحاب، وتسوقه)"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "فٱلتـٰليٰت ذكۡرا (فالتاليات: قسم بالملائكة حين تتلو ذكر الله، وكلامه)"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "إن إلٰهكمۡ لوٰحدٞ"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "رب ٱلسمٰوٰت وٱلۡأرۡض وما بيۡنهما ورب ٱلۡمشٰرق"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "إنا زينا ٱلسمآء ٱلدنۡيا بزينة ٱلۡكواكب"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "وحفۡظا من كل شيۡطٰنٖ ماردٖ (مارد: جني متمرد، خارج عن الطاعة)"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "لا يسمعون إلى ٱلۡملإ ٱلۡأعۡلىٰ ويقۡذفون من كل جانبٖ (ويقذفون: يرجمون)"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "دحوراۖ ولهمۡ عذابٞ واصب (دحورا: طردا للشياطين عن الاستماع, واصب: دائم موجع)"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "إلا منۡ خطف ٱلۡخطۡفة فأتۡبعه شهابٞ ثاقبٞ (خطف الخطفة: اختلس الكلمة؛ مسارقة بسرعة, شهاب: ما يرى كالكوكب ينقض من السماء بسرعة, ثاقب: مضيء)"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "فٱسۡتفۡتهمۡ أهمۡ أشد خلۡقا أم منۡ خلقۡنآۚ إنا خلقۡنٰهم من طينٖ لازبۭ (خلقناهم: خلقنا أباهم آدم - عليه السلام -, لازب: لزج يلتصق بعضه ببعض)"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "بلۡ عجبۡت ويسۡخرون"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "وإذا ذكروا لا يذۡكرون"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "وإذا رأوۡا ءاية يسۡتسۡخرون"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "وقالوٓا إنۡ هٰذآ إلا سحۡرٞ مبين"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "أءذا متۡنا وكنا ترابا وعظٰما أءنا لمبۡعوثون"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "أوءابآؤنا ٱلۡأولون"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "قلۡ نعمۡ وأنتمۡ دٰخرون (داخرون: صاغرون، أذلاء)"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "فإنما هي زجۡرةٞ وٰحدةٞ فإذا همۡ ينظرون (زجرة: نفخة)"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "وقالوا يٰويۡلنا هٰذا يوۡم ٱلدين"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "هٰذا يوۡم ٱلۡفصۡل ٱلذي كنتم به تكذبون"
        },
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞ٱحۡشروا ٱلذين ظلموا وأزۡوٰجهمۡ وما كانوا يعۡبدون (احشروا: اجمعوا, وأزواجهم: نظراءهم، وقرناءهم في الدنيا)"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "من دون ٱلله فٱهۡدوهمۡ إلىٰ صرٰط ٱلۡجحيم (فاهدوهم: سوقوهم سوقا عنيفا)"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وقفوهمۡۖ إنهم مسۡـٔولون (وقفوهم: احبسوهم قبل أن يصلوا إلى جهنم)"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "ما لكمۡ لا تناصرون"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بلۡ هم ٱلۡيوۡم مسۡتسۡلمون"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "وأقۡبل بعۡضهمۡ علىٰ بعۡضٖ يتسآءلون"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قالوٓا إنكمۡ كنتمۡ تأۡتوننا عن ٱلۡيمين (عن اليمين: من قبل الحق والدين)"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قالوا بل لمۡ تكونوا مؤۡمنين"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وما كان لنا عليۡكم من سلۡطٰنۭۖ بلۡ كنتمۡ قوۡما طٰغين (سلطان: حجة، أو قوة, طاغين: مجاوزين الحد في العصيان)"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فحق عليۡنا قوۡل ربنآۖ إنا لذآئقون (فحق علينا: وجب علينا)"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فأغۡويۡنٰكمۡ إنا كنا غٰوين"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فإنهمۡ يوۡمئذٖ في ٱلۡعذاب مشۡتركون"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "إنا كذٰلك نفۡعل بٱلۡمجۡرمين"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "إنهمۡ كانوٓا إذا قيل لهمۡ لآ إلٰه إلا ٱلله يسۡتكۡبرون"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "ويقولون أئنا لتاركوٓا ءالهتنا لشاعرٖ مجۡنونۭ"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بلۡ جآء بٱلۡحق وصدق ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "إنكمۡ لذآئقوا ٱلۡعذاب ٱلۡأليم"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وما تجۡزوۡن إلا ما كنتمۡ تعۡملون"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "إلا عباد ٱلله ٱلۡمخۡلصين (المخلصين: الذين أخلصوا في عبادة الله؛ فأخلصهم، واختصهم برحمته)"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "أولـٰٓئك لهمۡ رزۡقٞ معۡلومٞ"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فوٰكه وهم مكۡرمون"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "في جنـٰت ٱلنعيم"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "علىٰ سررٖ متقٰبلين"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يطاف عليۡهم بكأۡسٖ من معينۭ (بكاس: بخمر, من معين: من أنهار جارية لا يخافون انقطاعها)"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بيۡضآء لذةٖ للشـٰربين"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لا فيها غوۡلٞ ولا همۡ عنۡها ينزفون (لا فيها غول: ليس فيها ما يغتال عقولهم, ولا هم عنها ينزفون: لا يسكرون، ولا تضر أبدانهم)"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وعندهمۡ قٰصرٰت ٱلطرۡف عينٞ (قاصرات الطرف: عفيفات لا ينظرن إلى غير أزواجهن, عين: حسان الأعين)"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كأنهن بيۡضٞ مكۡنونٞ (مكنون: لم تمسه الأيدي)"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فأقۡبل بعۡضهمۡ علىٰ بعۡضٖ يتسآءلون"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قال قآئلٞ منۡهمۡ إني كان لي قرينٞ (قرين: صاحب ملازم لي)"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "يقول أءنك لمن ٱلۡمصدقين"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "أءذا متۡنا وكنا ترابا وعظٰما أءنا لمدينون (لمدينون: لمجزيون، ومحاسبون)"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قال هلۡ أنتم مطلعون"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فٱطلع فرءاه في سوآء ٱلۡجحيم"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قال تٱلله إن كدت لترۡدين (إن كدت: إنك قاربت, لتردين: لتهلكني بضلالك، وإغوائك)"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "ولوۡلا نعۡمة ربي لكنت من ٱلۡمحۡضرين (المحضرين: من أحضروا في العذاب معك)"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "أفما نحۡن بميتين"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "إلا موۡتتنا ٱلۡأولىٰ وما نحۡن بمعذبين"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "إن هٰذا لهو ٱلۡفوۡز ٱلۡعظيم"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لمثۡل هٰذا فلۡيعۡمل ٱلۡعٰملون"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "أذٰلك خيۡرٞ نزلا أمۡ شجرة ٱلزقوم (نزلا: ضيافة, شجرة الزقوم: شجرة خبيثة، ملعونة، من طعام أهل النار)"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "إنا جعلۡنٰها فتۡنة للظـٰلمين (فتنة: ابتلاء لهم؛ حيث كذبوا بوجود شجرة في النار)"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "إنها شجرةٞ تخۡرج فيٓ أصۡل ٱلۡجحيم (أصل الجحيم: قعر جهنم)"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طلۡعها كأنه رءوس ٱلشيٰطين (طلعها: ثمرها)"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فإنهمۡ لأٓكلون منۡها فمالـٔون منۡها ٱلۡبطون"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثم إن لهمۡ عليۡها لشوۡبا منۡ حميمٖ (لشوبا: لخلطا، ومزاجا, حميم: من ماء حار بالغ الحرارة)"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثم إن مرۡجعهمۡ لإلى ٱلۡجحيم"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "إنهمۡ ألۡفوۡا ءابآءهمۡ ضآلين (ألفوا: وجدوا)"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فهمۡ علىٰٓ ءاثٰرهمۡ يهۡرعون (يهرعون: يسرعون في متابعتهم على الضلال)"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "ولقدۡ ضل قبۡلهمۡ أكۡثر ٱلۡأولين"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "ولقدۡ أرۡسلۡنا فيهم منذرين"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فٱنظرۡ كيۡف كان عٰقبة ٱلۡمنذرين"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "إلا عباد ٱلله ٱلۡمخۡلصين"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "ولقدۡ نادىٰنا نوحٞ فلنعۡم ٱلۡمجيبون"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "ونجيۡنٰه وأهۡله من ٱلۡكرۡب ٱلۡعظيم"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "وجعلۡنا ذريته هم ٱلۡباقين"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "وتركۡنا عليۡه في ٱلۡأٓخرين (وتركنا عليه: أبقينا له ذكرا جميلا, في الآخرين: فيمن جاء بعده من الناس)"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "سلٰم علىٰ نوحٖ في ٱلۡعٰلمين"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "إنا كذٰلك نجۡزي ٱلۡمحۡسنين"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "إنه منۡ عبادنا ٱلۡمؤۡمنين"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "ثم أغۡرقۡنا ٱلۡأٓخرين"
        },
        {
            "chapter": 37,
            "verse": 83,
            "text": "۞وإن من شيعته لإبۡرٰهيم (شيعته: من تابعه على دينه، ومنهاجه)"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "إذۡ جآء ربه بقلۡبٖ سليم (سليم: بريء من كل اعتقاد باطل، وخلق ذميم)"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "إذۡ قال لأبيه وقوۡمه ماذا تعۡبدون"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "أئفۡكا ءالهة دون ٱلله تريدون (أئفكا آلهة: أتريدون آلهة مختلقة تعبدونها؟)"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "فما ظنكم برب ٱلۡعٰلمين"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "فنظر نظۡرة في ٱلنجوم (فنظر: رفع بصره إلى النجوم متفكرا فيما يعتذر به من الخروج معهم)"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "فقال إني سقيمٞ (سقيم: مريض؛ وهذا تعريض منه؛ أراد: أني لا أخلو من سقم كعادة الناس أو أني ضعيف، أو سقيم القلب من عبادتكم غير الله)"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "فتولوۡا عنۡه مدۡبرين"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "فراغ إلىٰٓ ءالهتهمۡ فقال ألا تأۡكلون (فراغ إلى آلهتهم: مال بخفية مسرعا إلى الأصنام)"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "ما لكمۡ لا تنطقون"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "فراغ عليۡهمۡ ضرۡبۢا بٱلۡيمين (باليمين: بيده اليمنى)"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "فأقۡبلوٓا إليۡه يزفون (يزفون: يعدون مسرعين غاضبين)"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "قال أتعۡبدون ما تنۡحتون"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "وٱلله خلقكمۡ وما تعۡملون"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "قالوا ٱبۡنوا له بنۡيٰنا فألۡقوه في ٱلۡجحيم"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "فأرادوا به كيۡدا فجعلۡنٰهم ٱلۡأسۡفلين"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "وقال إني ذاهب إلىٰ ربي سيهۡدين"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "رب هبۡ لي من ٱلصـٰلحين"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "فبشرۡنٰه بغلٰم حليمٖ (بغلام حليم: هو: إسماعيل - عليه السلام)"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "فلما بلغ معه ٱلسعۡي قال يٰبني إنيٓ أرىٰ في ٱلۡمنام أنيٓ أذۡبحك فٱنظرۡ ماذا ترىٰۚ قال يـٰٓأبت ٱفۡعلۡ ما تؤۡمرۖ ستجدنيٓ إن شآء ٱلله من ٱلصـٰبرين (بلغ معه السعي: وصل درجة العمل معه، وقضاء حوائجه)"
        },
        {
            "chapter": 37,
            "verse": 103,
            "text": "فلمآ أسۡلما وتله للۡجبين (أسلما: استسلما لأمر الله, وتله للجبين: ألقاه على جانب جبهته على الأرض)"
        },
        {
            "chapter": 37,
            "verse": 104,
            "text": "ونٰديۡنٰه أن يـٰٓإبۡرٰهيم"
        },
        {
            "chapter": 37,
            "verse": 105,
            "text": "قدۡ صدقۡت ٱلرءۡيآۚ إنا كذٰلك نجۡزي ٱلۡمحۡسنين"
        },
        {
            "chapter": 37,
            "verse": 106,
            "text": "إن هٰذا لهو ٱلۡبلـٰٓؤا ٱلۡمبين (البلاء المبين: الاختبار الشاق الذي أبان عن صدق إيمانه)"
        },
        {
            "chapter": 37,
            "verse": 107,
            "text": "وفديۡنٰه بذبۡح عظيمٖ (وفديناه: جعلنا بديلا عنه, بذبح: بكبش)"
        },
        {
            "chapter": 37,
            "verse": 108,
            "text": "وتركۡنا عليۡه في ٱلۡأٓخرين (وتركنا عليه في الآخرين: أبقينا له ذكرا حسنا فيمن جاء بعده)"
        },
        {
            "chapter": 37,
            "verse": 109,
            "text": "سلٰم علىٰٓ إبۡرٰهيم"
        },
        {
            "chapter": 37,
            "verse": 110,
            "text": "كذٰلك نجۡزي ٱلۡمحۡسنين"
        },
        {
            "chapter": 37,
            "verse": 111,
            "text": "إنه منۡ عبادنا ٱلۡمؤۡمنين"
        },
        {
            "chapter": 37,
            "verse": 112,
            "text": "وبشرۡنٰه بإسۡحٰق نبيا من ٱلصـٰلحين"
        },
        {
            "chapter": 37,
            "verse": 113,
            "text": "وبٰركۡنا عليۡه وعلىٰٓ إسۡحٰقۚ ومن ذريتهما محۡسنٞ وظالمٞ لنفۡسه مبينٞ"
        },
        {
            "chapter": 37,
            "verse": 114,
            "text": "ولقدۡ مننا علىٰ موسىٰ وهٰرون"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "ونجيۡنٰهما وقوۡمهما من ٱلۡكرۡب ٱلۡعظيم (الكرب العظيم: الغرق في البحر، والعبودية لفرعون)"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "ونصرۡنٰهمۡ فكانوا هم ٱلۡغٰلبين"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "وءاتيۡنٰهما ٱلۡكتٰب ٱلۡمسۡتبين"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "وهديۡنٰهما ٱلصرٰط ٱلۡمسۡتقيم"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "وتركۡنا عليۡهما في ٱلۡأٓخرين"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "سلٰم علىٰ موسىٰ وهٰرون"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "إنا كذٰلك نجۡزي ٱلۡمحۡسنين"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "إنهما منۡ عبادنا ٱلۡمؤۡمنين"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "وإن إلۡياس لمن ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "إذۡ قال لقوۡمهٓ ألا تتقون"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "أتدۡعون بعۡلا وتذرون أحۡسن ٱلۡخٰلقين (أتدعون بعلا: أتعبدون الصنم المسمى: «بعلا»)"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "ٱلله ربكمۡ ورب ءابآئكم ٱلۡأولين"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "فكذبوه فإنهمۡ لمحۡضرون (لمحضرون: لمجموعون للحساب، والعقاب)"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "إلا عباد ٱلله ٱلۡمخۡلصين"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "وتركۡنا عليۡه في ٱلۡأٓخرين"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "سلٰم علىٰٓ إلۡ ياسين (إل ياسين: هو: إلياس نفسه، أو: هو وأتباعه)"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "إنا كذٰلك نجۡزي ٱلۡمحۡسنين"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "إنه منۡ عبادنا ٱلۡمؤۡمنين"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "وإن لوطا لمن ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "إذۡ نجيۡنٰه وأهۡلهٓ أجۡمعين"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "إلا عجوزا في ٱلۡغٰبرين (الغابرين: الباقين في العذاب)"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "ثم دمرۡنا ٱلۡأٓخرين"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "وإنكمۡ لتمرون عليۡهم مصۡبحين"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "وبٱليۡلۚ أفلا تعۡقلون"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "وإن يونس لمن ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "إذۡ أبق إلى ٱلۡفلۡك ٱلۡمشۡحون (أبق: هرب من بلده من غير إذن ربه, الفلك: السفينة, المشحون: المملوء أمتعة، وركابا)"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "فساهم فكان من ٱلۡمدۡحضين (فساهم: اقترع ركاب السفينة؛ لتخفيف الحمولة خوف الغرق, المدحضين: المغلوبين بالقرعة)"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "فٱلۡتقمه ٱلۡحوت وهو مليمٞ (فالتقمه: ابتلعه, مليم: آت بما يلام عليه)"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "فلوۡلآ أنه كان من ٱلۡمسبحين (المسبحين: العابدين الذاكرين، الذين يقول أحدهم - إذا وقع في كربة -: {لا إله إلا أنت سبحانك إني كنت من الظالمين} [الأنبياء]"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "للبث في بطۡنهٓ إلىٰ يوۡم يبۡعثون"
        },
        {
            "chapter": 37,
            "verse": 145,
            "text": "۞فنبذۡنٰه بٱلۡعرآء وهو سقيمٞ (فنبذناه: فطرحناه من بطن الحوت, بالعراء: بالأرض الخالية من الشجر والبناء, سقيم: ضعيف البدن)"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "وأنۢبتۡنا عليۡه شجرة من يقۡطينٖ (يقطين: قرع)"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "وأرۡسلۡنٰه إلىٰ مائة ألۡف أوۡ يزيدون (أو يزيدون: بل يزيدون)"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "فـٔامنوا فمتعۡنٰهمۡ إلىٰ حينٖ (فمتعناهم إلى حين: أبقيناهم أحياء متمتعين إلى بلوغ آجالهم)"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "فٱسۡتفۡتهمۡ ألربك ٱلۡبنات ولهم ٱلۡبنون"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "أمۡ خلقۡنا ٱلۡملـٰٓئكة إنٰثا وهمۡ شٰهدون"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "ألآ إنهم منۡ إفۡكهمۡ ليقولون (إفكهم: كذبهم)"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "ولد ٱلله وإنهمۡ لكٰذبون"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "أصۡطفى ٱلۡبنات على ٱلۡبنين (أصطفى: أيختار؟)"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "ما لكمۡ كيۡف تحۡكمون (ما لكم كيف تحكمون: بئس الحكم ما تحكمونه)"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "أفلا تذكرون"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "أمۡ لكمۡ سلۡطٰنٞ مبينٞ (سلطان: حجة)"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فأۡتوا بكتٰبكمۡ إن كنتمۡ صٰدقين"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وجعلوا بيۡنه وبيۡن ٱلۡجنة نسباۚ ولقدۡ علمت ٱلۡجنة إنهمۡ لمحۡضرون (الجنة: الملائكة، سموا بذلك؛ لاجتنانهم عن الأبصار, نسبا: قرابة, لمحضرون: إن الكفار سيحضرون للعذاب يوم القيامة)"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سبۡحٰن ٱلله عما يصفون (سبحان الله: تنزيها لله)"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "إلا عباد ٱلله ٱلۡمخۡلصين"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فإنكمۡ وما تعۡبدون"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "مآ أنتمۡ عليۡه بفٰتنين (بفاتنين: بمضلين أحدا)"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "إلا منۡ هو صال ٱلۡجحيم (صال الجحيم: من يصلى الجحيم بدخولها ومقاساة حرها)"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "ومامنآ إلا له مقامٞ معۡلومٞ"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وإنا لنحۡن ٱلصآفون (الصافون: الواقفون صفوفا في عبادة الله)"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وإنا لنحۡن ٱلۡمسبحون (المسبحون: المنزهون الله عن كل ما لا يليق به)"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وإن كانوا ليقولون"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لوۡ أن عندنا ذكۡرا من ٱلۡأولين (ذكرا من الأولين: كتابا من كتب الأنبياء السابقين)"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لكنا عباد ٱلله ٱلۡمخۡلصين"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فكفروا بهۖ فسوۡف يعۡلمون"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "ولقدۡ سبقتۡ كلمتنا لعبادنا ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "إنهمۡ لهم ٱلۡمنصورون"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وإن جندنا لهم ٱلۡغٰلبون"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فتول عنۡهمۡ حتىٰ حينٖ (فتول عنهم: أعرض عمن عاند)"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وأبۡصرۡهمۡ فسوۡف يبۡصرون"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "أفبعذابنا يسۡتعۡجلون"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فإذا نزل بساحتهمۡ فسآء صباح ٱلۡمنذرين (بساحتهم: بفنائهم, فساء: بئس)"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وتول عنۡهمۡ حتىٰ حينٖ"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وأبۡصرۡ فسوۡف يبۡصرون"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سبۡحٰن ربك رب ٱلۡعزة عما يصفون"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وسلٰم على ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "وٱلۡحمۡد لله رب ٱلۡعٰلمين"
        }
    ]
}