{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "ٱلۡقارعة (القارعة: القيامة التي تقرع القلوب بأهوالها)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "ما ٱلۡقارعة"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "ومآ أدۡرىٰك ما ٱلۡقارعة"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "يوۡم يكون ٱلناس كٱلۡفراش ٱلۡمبۡثوث (المبثوث: المنتشر)"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "وتكون ٱلۡجبال كٱلۡعهۡن ٱلۡمنفوش (كالعهن: كالصوف المصبوغ بألوان مختلفة, المنفوش: الذي مزق، ونفش، فتفرقت أجزاؤه)"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "فأما من ثقلتۡ موٰزينه (ثقلت موازينه: رجحت موازين حسناته)"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "فهو في عيشةٖ راضيةٖ"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "وأما منۡ خفتۡ موٰزينه"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "فأمه هاويةٞ (فأمه هاوية: ماواه إلى جهنم يهوي على راسه)"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "ومآ أدۡرىٰك ما هيهۡ"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "نار حاميةۢ (حامية: حارة قد اشتد إيقادها)"
        }
    ]
}