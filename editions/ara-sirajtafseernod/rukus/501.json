{
    "rukus": [
        {
            "chapter": 69,
            "verse": 38,
            "text": "فلآ أقۡسم بما تبۡصرون (فلا أقسم: أقسم، و (لا): لتاكيد القسم"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "وما لا تبۡصرون"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "إنه لقوۡل رسولٖ كريمٖ"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "وما هو بقوۡل شاعرٖۚ قليلا ما تؤۡمنون"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "ولا بقوۡل كاهنٖۚ قليلا ما تذكرون (بقول كاهن: بسجع كسجع الكهان الذين يدعون علم المغيبات)"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "تنزيلٞ من رب ٱلۡعٰلمين"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "ولوۡ تقول عليۡنا بعۡض ٱلۡأقاويل (تقول: اختلق، وافترى علينا)"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "لأخذۡنا منۡه بٱلۡيمين"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "ثم لقطعۡنا منۡه ٱلۡوتين (الوتين: نياط القلب، وهو: عرق متصل به إذا قطع مات صاحبه)"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "فما منكم منۡ أحد عنۡه حٰجزين (حاجزين: مانعين الهلاك والعقاب عنه)"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "وإنه لتذۡكرةٞ للۡمتقين"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "وإنا لنعۡلم أن منكم مكذبين"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "وإنه لحسۡرة على ٱلۡكٰفرين (لحسرة: لندامة عظيمة)"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "وإنه لحق ٱلۡيقين"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "فسبحۡ بٱسۡم ربك ٱلۡعظيم (فسبح باسم ربك: فنزه ربك عما لا يليق به ذاكرا اسمه)"
        }
    ]
}