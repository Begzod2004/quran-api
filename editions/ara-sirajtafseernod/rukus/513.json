{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "فلا صدق ولا صلىٰ"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "ولٰكن كذب وتولىٰ (وتولى: أعرض عن الإيمان)"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "ثم ذهب إلىٰٓ أهۡله يتمطىٰٓ (يتمطى: يتبختر في مشيته مختالا)"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "أوۡلىٰ لك فأوۡلىٰ (أولى لك فأولى: كلمة وعيد، أي: هلاك لك فهلاك)"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "ثم أوۡلىٰ لك فأوۡلىٰٓ"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "أيحۡسب ٱلۡإنسٰن أن يتۡرك سدى (سدى: هملا لا يؤمر، ولا يحاسب)"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "ألمۡ يك نطۡفة من منيٖ يمۡنىٰ (يمنى: يصب في الرحم)"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "ثم كان علقة فخلق فسوىٰ (علقة: قطعة من دم جامد, فسوى: عدل خلقه، وأعضاءه)"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "فجعل منۡه ٱلزوۡجيۡن ٱلذكر وٱلۡأنثىٰٓ"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "أليۡس ذٰلك بقٰدر علىٰٓ أن يحۡـۧي ٱلۡموۡتىٰ"
        }
    ]
}