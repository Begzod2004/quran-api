{
    "rukus": [
        {
            "chapter": 15,
            "verse": 26,
            "text": "ولقدۡ خلقۡنا ٱلۡإنسٰن من صلۡصٰلٖ منۡ حمإٖ مسۡنونٖ (صلصال: طين يابس يسمع له صوت إذا نقر, حمإ: طين أسود, مسنون: متغير لونه وريحه)"
        },
        {
            "chapter": 15,
            "verse": 27,
            "text": "وٱلۡجآن خلقۡنٰه من قبۡل من نار ٱلسموم (نار السموم: نار شديدة الحرارة لا دخان لها)"
        },
        {
            "chapter": 15,
            "verse": 28,
            "text": "وإذۡ قال ربك للۡملـٰٓئكة إني خٰلقۢ بشرا من صلۡصٰلٖ منۡ حمإٖ مسۡنونٖ"
        },
        {
            "chapter": 15,
            "verse": 29,
            "text": "فإذا سويۡته ونفخۡت فيه من روحي فقعوا له سٰجدين"
        },
        {
            "chapter": 15,
            "verse": 30,
            "text": "فسجد ٱلۡملـٰٓئكة كلهمۡ أجۡمعون"
        },
        {
            "chapter": 15,
            "verse": 31,
            "text": "إلآ إبۡليس أبىٰٓ أن يكون مع ٱلسـٰجدين"
        },
        {
            "chapter": 15,
            "verse": 32,
            "text": "قال يـٰٓإبۡليس ما لك ألا تكون مع ٱلسـٰجدين"
        },
        {
            "chapter": 15,
            "verse": 33,
            "text": "قال لمۡ أكن لأسۡجد لبشر خلقۡته من صلۡصٰلٖ منۡ حمإٖ مسۡنونٖ"
        },
        {
            "chapter": 15,
            "verse": 34,
            "text": "قال فٱخۡرجۡ منۡها فإنك رجيمٞ"
        },
        {
            "chapter": 15,
            "verse": 35,
            "text": "وإن عليۡك ٱللعۡنة إلىٰ يوۡم ٱلدين"
        },
        {
            "chapter": 15,
            "verse": 36,
            "text": "قال رب فأنظرۡنيٓ إلىٰ يوۡم يبۡعثون (فأنظرني: فأمهلني)"
        },
        {
            "chapter": 15,
            "verse": 37,
            "text": "قال فإنك من ٱلۡمنظرين"
        },
        {
            "chapter": 15,
            "verse": 38,
            "text": "إلىٰ يوۡم ٱلۡوقۡت ٱلۡمعۡلوم"
        },
        {
            "chapter": 15,
            "verse": 39,
            "text": "قال رب بمآ أغۡويۡتني لأزينن لهمۡ في ٱلۡأرۡض ولأغۡوينهمۡ أجۡمعين"
        },
        {
            "chapter": 15,
            "verse": 40,
            "text": "إلا عبادك منۡهم ٱلۡمخۡلصين"
        },
        {
            "chapter": 15,
            "verse": 41,
            "text": "قال هٰذا صرٰط علي مسۡتقيم (صراط: طريق)"
        },
        {
            "chapter": 15,
            "verse": 42,
            "text": "إن عبادي ليۡس لك عليۡهمۡ سلۡطٰن إلا من ٱتبعك من ٱلۡغاوين (سلطان: قوة)"
        },
        {
            "chapter": 15,
            "verse": 43,
            "text": "وإن جهنم لموۡعدهمۡ أجۡمعين"
        },
        {
            "chapter": 15,
            "verse": 44,
            "text": "لها سبۡعة أبۡوٰبٖ لكل بابٖ منۡهمۡ جزۡءٞ مقۡسوم"
        }
    ]
}