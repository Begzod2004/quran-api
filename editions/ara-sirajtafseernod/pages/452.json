{
    "pages": [
        {
            "chapter": 37,
            "verse": 154,
            "text": "ما لكمۡ كيۡف تحۡكمون (ما لكم كيف تحكمون: بئس الحكم ما تحكمونه)"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "أفلا تذكرون"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "أمۡ لكمۡ سلۡطٰنٞ مبينٞ (سلطان: حجة)"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فأۡتوا بكتٰبكمۡ إن كنتمۡ صٰدقين"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وجعلوا بيۡنه وبيۡن ٱلۡجنة نسباۚ ولقدۡ علمت ٱلۡجنة إنهمۡ لمحۡضرون (الجنة: الملائكة، سموا بذلك؛ لاجتنانهم عن الأبصار, نسبا: قرابة, لمحضرون: إن الكفار سيحضرون للعذاب يوم القيامة)"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سبۡحٰن ٱلله عما يصفون (سبحان الله: تنزيها لله)"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "إلا عباد ٱلله ٱلۡمخۡلصين"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فإنكمۡ وما تعۡبدون"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "مآ أنتمۡ عليۡه بفٰتنين (بفاتنين: بمضلين أحدا)"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "إلا منۡ هو صال ٱلۡجحيم (صال الجحيم: من يصلى الجحيم بدخولها ومقاساة حرها)"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "ومامنآ إلا له مقامٞ معۡلومٞ"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وإنا لنحۡن ٱلصآفون (الصافون: الواقفون صفوفا في عبادة الله)"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وإنا لنحۡن ٱلۡمسبحون (المسبحون: المنزهون الله عن كل ما لا يليق به)"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وإن كانوا ليقولون"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لوۡ أن عندنا ذكۡرا من ٱلۡأولين (ذكرا من الأولين: كتابا من كتب الأنبياء السابقين)"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لكنا عباد ٱلله ٱلۡمخۡلصين"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فكفروا بهۖ فسوۡف يعۡلمون"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "ولقدۡ سبقتۡ كلمتنا لعبادنا ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "إنهمۡ لهم ٱلۡمنصورون"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وإن جندنا لهم ٱلۡغٰلبون"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فتول عنۡهمۡ حتىٰ حينٖ (فتول عنهم: أعرض عمن عاند)"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وأبۡصرۡهمۡ فسوۡف يبۡصرون"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "أفبعذابنا يسۡتعۡجلون"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فإذا نزل بساحتهمۡ فسآء صباح ٱلۡمنذرين (بساحتهم: بفنائهم, فساء: بئس)"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وتول عنۡهمۡ حتىٰ حينٖ"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وأبۡصرۡ فسوۡف يبۡصرون"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سبۡحٰن ربك رب ٱلۡعزة عما يصفون"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وسلٰم على ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "وٱلۡحمۡد لله رب ٱلۡعٰلمين"
        }
    ]
}