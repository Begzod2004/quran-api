{
    "pages": [
        {
            "chapter": 37,
            "verse": 25,
            "text": "ما لكمۡ لا تناصرون"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بلۡ هم ٱلۡيوۡم مسۡتسۡلمون"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "وأقۡبل بعۡضهمۡ علىٰ بعۡضٖ يتسآءلون"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قالوٓا إنكمۡ كنتمۡ تأۡتوننا عن ٱلۡيمين (عن اليمين: من قبل الحق والدين)"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قالوا بل لمۡ تكونوا مؤۡمنين"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وما كان لنا عليۡكم من سلۡطٰنۭۖ بلۡ كنتمۡ قوۡما طٰغين (سلطان: حجة، أو قوة, طاغين: مجاوزين الحد في العصيان)"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فحق عليۡنا قوۡل ربنآۖ إنا لذآئقون (فحق علينا: وجب علينا)"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فأغۡويۡنٰكمۡ إنا كنا غٰوين"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فإنهمۡ يوۡمئذٖ في ٱلۡعذاب مشۡتركون"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "إنا كذٰلك نفۡعل بٱلۡمجۡرمين"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "إنهمۡ كانوٓا إذا قيل لهمۡ لآ إلٰه إلا ٱلله يسۡتكۡبرون"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "ويقولون أئنا لتاركوٓا ءالهتنا لشاعرٖ مجۡنونۭ"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بلۡ جآء بٱلۡحق وصدق ٱلۡمرۡسلين"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "إنكمۡ لذآئقوا ٱلۡعذاب ٱلۡأليم"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وما تجۡزوۡن إلا ما كنتمۡ تعۡملون"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "إلا عباد ٱلله ٱلۡمخۡلصين (المخلصين: الذين أخلصوا في عبادة الله؛ فأخلصهم، واختصهم برحمته)"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "أولـٰٓئك لهمۡ رزۡقٞ معۡلومٞ"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فوٰكه وهم مكۡرمون"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "في جنـٰت ٱلنعيم"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "علىٰ سررٖ متقٰبلين"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يطاف عليۡهم بكأۡسٖ من معينۭ (بكاس: بخمر, من معين: من أنهار جارية لا يخافون انقطاعها)"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بيۡضآء لذةٖ للشـٰربين"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لا فيها غوۡلٞ ولا همۡ عنۡها ينزفون (لا فيها غول: ليس فيها ما يغتال عقولهم, ولا هم عنها ينزفون: لا يسكرون، ولا تضر أبدانهم)"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وعندهمۡ قٰصرٰت ٱلطرۡف عينٞ (قاصرات الطرف: عفيفات لا ينظرن إلى غير أزواجهن, عين: حسان الأعين)"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كأنهن بيۡضٞ مكۡنونٞ (مكنون: لم تمسه الأيدي)"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فأقۡبل بعۡضهمۡ علىٰ بعۡضٖ يتسآءلون"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قال قآئلٞ منۡهمۡ إني كان لي قرينٞ (قرين: صاحب ملازم لي)"
        }
    ]
}