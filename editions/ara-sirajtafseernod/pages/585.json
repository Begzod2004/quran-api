{
    "pages": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "عبس وتولىٰٓ (عبس: قطب وجهه، وظهر أثر التغير عليه, وتولى: أعرض)"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "أن جآءه ٱلۡأعۡمىٰ (أن جاءه الأعمى: لأجل مجيء عبد الله بن أم مكتوم - رضي الله عنه)"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "وما يدۡريك لعله يزكىٰٓ (يزكى: يتطهر من ذنوبه)"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "أوۡ يذكر فتنفعه ٱلذكۡرىٰٓ"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "أما من ٱسۡتغۡنىٰ"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "فأنت له تصدىٰ (تصدى: تتعرض له)"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "وما عليۡك ألا يزكىٰ"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "وأما من جآءك يسۡعىٰ"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "وهو يخۡشىٰ"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "فأنت عنۡه تلهىٰ (تلهى: تتشاغل)"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "كلآ إنها تذۡكرةٞ (كلا: ليس الأمر كما فعلت)"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "فمن شآء ذكره"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "في صحفٖ مكرمةٖ"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "مرۡفوعةٖ مطهرةۭ"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "بأيۡدي سفرةٖ (سفرة: ملائكة كتبة يقومون بالسفارة بين الله وخلقه)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "كرامۭ بررةٖ (بررة: مطيعين لله لا يعصونه)"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "قتل ٱلۡإنسٰن مآ أكۡفره (قتل الإنسان: لعن الكافر، وعذب, ما أكفره: ما أشد كفره)"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "منۡ أي شيۡء خلقه"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "من نطۡفة خلقه فقدره (نطفة: ماء قليل مهين؛ وهو المني, فقدره: خلقه أطوارا)"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "ثم ٱلسبيل يسره (السبيل يسره: سهل له طريق خروجه من بطن أمه، وبين له طريق الخير والشر)"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "ثم أماته فأقۡبره (فأقبره: جعل له مكانا يقبر فيه)"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "ثم إذا شآء أنشره (أنشره: أحياه)"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "كلا لما يقۡض مآ أمره (لما يقض ما أمره: لم يؤد الكافر ما أمره الله به من الإيمان والطاعة)"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "فلۡينظر ٱلۡإنسٰن إلىٰ طعامهٓ"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "أنا صببۡنا ٱلۡمآء صبا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "ثم شققۡنا ٱلۡأرۡض شقا"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "فأنۢبتۡنا فيها حبا"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "وعنبا وقضۡبا (وقضبا: علفا للدواب)"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "وزيۡتونا ونخۡلا"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "وحدآئق غلۡبا (غلبا: عظيمة الأشجار)"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "وفٰكهة وأبا (وأبا: كلأ للبهائم)"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "متٰعا لكمۡ ولأنۡعٰمكمۡ"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "فإذا جآءت ٱلصآخة (الصاخة: صيحة يوم القيامة التي تصم الآذان من هولها)"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "يوۡم يفر ٱلۡمرۡء منۡ أخيه"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "وأمه وأبيه"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "وصٰحبته وبنيه"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "لكل ٱمۡريٕٖ منۡهمۡ يوۡمئذٖ شأۡنٞ يغۡنيه (يغنيه: يشغله)"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "وجوهٞ يوۡمئذٖ مسۡفرةٞ (مسفرة: مستنيرة)"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "ضاحكةٞ مسۡتبۡشرةٞ (مستبشرة: فرحة)"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "ووجوهٞ يوۡمئذ عليۡها غبرةٞ (غبرة: غبار، وكدورة)"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "ترۡهقها قترة (ترهقها: تغشاها, قترة: ذلة، وظلمة)"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "أولـٰٓئك هم ٱلۡكفرة ٱلۡفجرة (الكفرة: الجاحدون بقلوبهم, الفجرة: العصاة بأعمالهم)"
        }
    ]
}