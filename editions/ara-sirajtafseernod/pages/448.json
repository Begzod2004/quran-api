{
    "pages": [
        {
            "chapter": 37,
            "verse": 52,
            "text": "يقول أءنك لمن ٱلۡمصدقين"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "أءذا متۡنا وكنا ترابا وعظٰما أءنا لمدينون (لمدينون: لمجزيون، ومحاسبون)"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قال هلۡ أنتم مطلعون"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فٱطلع فرءاه في سوآء ٱلۡجحيم"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قال تٱلله إن كدت لترۡدين (إن كدت: إنك قاربت, لتردين: لتهلكني بضلالك، وإغوائك)"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "ولوۡلا نعۡمة ربي لكنت من ٱلۡمحۡضرين (المحضرين: من أحضروا في العذاب معك)"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "أفما نحۡن بميتين"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "إلا موۡتتنا ٱلۡأولىٰ وما نحۡن بمعذبين"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "إن هٰذا لهو ٱلۡفوۡز ٱلۡعظيم"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لمثۡل هٰذا فلۡيعۡمل ٱلۡعٰملون"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "أذٰلك خيۡرٞ نزلا أمۡ شجرة ٱلزقوم (نزلا: ضيافة, شجرة الزقوم: شجرة خبيثة، ملعونة، من طعام أهل النار)"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "إنا جعلۡنٰها فتۡنة للظـٰلمين (فتنة: ابتلاء لهم؛ حيث كذبوا بوجود شجرة في النار)"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "إنها شجرةٞ تخۡرج فيٓ أصۡل ٱلۡجحيم (أصل الجحيم: قعر جهنم)"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طلۡعها كأنه رءوس ٱلشيٰطين (طلعها: ثمرها)"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فإنهمۡ لأٓكلون منۡها فمالـٔون منۡها ٱلۡبطون"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثم إن لهمۡ عليۡها لشوۡبا منۡ حميمٖ (لشوبا: لخلطا، ومزاجا, حميم: من ماء حار بالغ الحرارة)"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثم إن مرۡجعهمۡ لإلى ٱلۡجحيم"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "إنهمۡ ألۡفوۡا ءابآءهمۡ ضآلين (ألفوا: وجدوا)"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فهمۡ علىٰٓ ءاثٰرهمۡ يهۡرعون (يهرعون: يسرعون في متابعتهم على الضلال)"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "ولقدۡ ضل قبۡلهمۡ أكۡثر ٱلۡأولين"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "ولقدۡ أرۡسلۡنا فيهم منذرين"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فٱنظرۡ كيۡف كان عٰقبة ٱلۡمنذرين"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "إلا عباد ٱلله ٱلۡمخۡلصين"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "ولقدۡ نادىٰنا نوحٞ فلنعۡم ٱلۡمجيبون"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "ونجيۡنٰه وأهۡله من ٱلۡكرۡب ٱلۡعظيم"
        }
    ]
}