{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "بلۡ تؤۡثرون ٱلۡحيوٰة ٱلدنۡيا"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "وٱلۡأٓخرة خيۡرٞ وأبۡقىٰٓ"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "إن هٰذا لفي ٱلصحف ٱلۡأولىٰ (إن هذا: أي: من قوله: {قد أفلح من تزكى)"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "صحف إبۡرٰهيم وموسىٰ"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "هلۡ أتىٰك حديث ٱلۡغٰشية (الغاشية: القيامة تغشى الناس بأهوالها)"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "وجوهٞ يوۡمئذ خٰشعة (خاشعة: ذليلة منكسرة)"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "عاملةٞ ناصبةٞ (عاملة ناصبة: مجهدة بالعمل والتعب في النار)"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "تصۡلىٰ نارا حامية (تصلى نارا: تدخل نارا، وتقاسي حرها, حامية: شديدة التوهج)"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "تسۡقىٰ منۡ عيۡن ءانيةٖ (آنية: شديدة الحرارة)"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "ليۡس لهمۡ طعام إلا من ضريعٖ (ضريع: نبت خبيث ذي شوك، لا ترعاه الدواب)"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "لا يسۡمن ولا يغۡني من جوعٖ"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "وجوهٞ يوۡمئذٖ ناعمةٞ"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "لسعۡيها راضيةٞ (لسعيها: لعملها بالطاعة في الدنيا)"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "في جنة عاليةٖ"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "لا تسۡمع فيها لٰغية (لاغية: لا كلمة لغو واحدة، ولا نفسا تلغو وتهذي)"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "فيها عيۡنٞ جاريةٞ (جارية: متدفقة بالماء)"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "فيها سررٞ مرۡفوعةٞ"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "وأكۡوابٞ موۡضوعةٞ (موضوعة: معدة للشاربين)"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "ونمارق مصۡفوفةٞ (ونمارق: وسائد)"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "وزرابي مبۡثوثة (وزرابي مبثوثة: بسط كثيرة مفروشة)"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "أفلا ينظرون إلى ٱلۡإبل كيۡف خلقتۡ"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "وإلى ٱلسمآء كيۡف رفعتۡ"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "وإلى ٱلۡجبال كيۡف نصبتۡ"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "وإلى ٱلۡأرۡض كيۡف سطحتۡ (سطحت: بسطت، ومهدت)"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "فذكرۡ إنمآ أنت مذكرٞ"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "لسۡت عليۡهم بمصيۡطر (بمصيطر: بمتسلط تكرههم على الإيمان)"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "إلا من تولىٰ وكفر"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "فيعذبه ٱلله ٱلۡعذاب ٱلۡأكۡبر"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "إن إليۡنآ إيابهمۡ (إيابهم: مرجعهم بعد الموت)"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "ثم إن عليۡنا حسابهم"
        }
    ]
}