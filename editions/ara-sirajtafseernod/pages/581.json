{
    "pages": [
        {
            "chapter": 77,
            "verse": 20,
            "text": "ألمۡ نخۡلقكم من مآءٖ مهينٖ (ماء مهين: ضعيف حقير؛ وهو النطفة)"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "فجعلۡنٰه في قرارٖ مكين (قرار مكين: مكان حصين متمكن)"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "إلىٰ قدرٖ معۡلومٖ (قدر: وقت)"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "فقدرۡنا فنعۡم ٱلۡقٰدرون"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "ألمۡ نجۡعل ٱلۡأرۡض كفاتا (كفاتا: وعاء تضم الأحياء والأموات)"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "أحۡيآء وأمۡوٰتا"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "وجعلۡنا فيها روٰسي شٰمخٰتٖ وأسۡقيۡنٰكم مآء فراتا (رواسي شامخات: جبالا ثوابت، مرتفعات, فراتا: عذبا، سائغا)"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "ٱنطلقوٓا إلىٰ ما كنتم به تكذبون"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "ٱنطلقوٓا إلىٰ ظلٖ ذي ثلٰث شعبٖ (ظل: هو دخان جهنم, ذي ثلاث شعب: يتفرع منه ثلاث قطع)"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "لا ظليلٖ ولا يغۡني من ٱللهب (لا ظليل: لا يظل من حر ذلك اليوم, ولا يغني: لا يدفع، ولا يقي)"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "إنها ترۡمي بشررٖ كٱلۡقصۡر (بشرر: الشرارة: ما يتطاير من النار, كالقصر: كالبناء المشيد في العظم والارتفاع)"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "كأنه جمٰلتٞ صفۡرٞ (جمالت صفر: كأن الشرر إبل سود يميل لونها إلى الصفرة)"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "هٰذا يوۡم لا ينطقون"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "ولا يؤۡذن لهمۡ فيعۡتذرون"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "هٰذا يوۡم ٱلۡفصۡلۖ جمعۡنٰكمۡ وٱلۡأولين"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "فإن كان لكمۡ كيۡدٞ فكيدون (كيد: حيلة في الخلاص من العذاب)"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "إن ٱلۡمتقين في ظلٰلٖ وعيونٖ (ظلال: ظل الأشجار الوارفة)"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "وفوٰكه مما يشۡتهون"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "كلوا وٱشۡربوا هنيٓـٔۢا بما كنتمۡ تعۡملون (هنيئا: متهنئين من غير تنغيص، ولا كدر)"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "إنا كذٰلك نجۡزي ٱلۡمحۡسنين"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "كلوا وتمتعوا قليلا إنكم مجۡرمون"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "وإذا قيل لهم ٱرۡكعوا لا يرۡكعون"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "ويۡلٞ يوۡمئذٖ للۡمكذبين"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "فبأي حديثۭ بعۡده يؤۡمنون (حديث بعده: كتاب وكلام بعد القرآن)"
        }
    ]
